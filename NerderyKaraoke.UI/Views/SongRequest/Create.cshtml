@model NerderyKaraoke.UI.Models.Shared.SongRequestViewModel
@{
	ViewBag.Title = "Create";
}

<h2>Submit a Song!</h2>

@using (Html.BeginForm("Create", "SongRequest"))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(m => m.SingerName, new { @class = "control-label col-md-2" })

			<div class="col-md-10">
				@Html.EditorFor(m => m.SingerName, new { htmlAttribudes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.SingerName, "", new {@class="text-danger"} )
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.SongTitle, new { @class = "control-label col-md-2" })

			<div class="col-md-10">
				@Html.EditorFor(m => m.SongTitle, new { htmlAttribudes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.SongTitle, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.YouTubeUrl, new { @class = "control-label col-md-2" })

			<div class="col-md-10">
				@Html.EditorFor(m => m.YouTubeUrl, new { htmlAttribudes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.YouTubeUrl, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button class="btn btn-info" type="submit">Create</button>
				@Html.ActionLink("Cancel", "Index", "Home", null, new {@class="btn btn-default"})
			</div>
		</div>

	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}


